{
  "name": "haushalt-mvcs",
  "private": true,
  "type": "module",
  "workspaces": ["client", "server"],
  "scripts": {
    "dev": "concurrently -k -n server,client \"npm run -w server dev\" \"npm run -w client dev\"",
    "dev:server": "npm run -w server dev",
    "dev:client": "npm run -w client dev",

    "build": "npm run -w client build",
    "preview": "npm run -w client preview",

    "prisma:generate": "npm run -w server prisma:generate",
    "prisma:migrate": "npm run -w server prisma:migrate",
    "prisma:studio": "npm run -w server prisma:studio",

    "postinstall": "npm run prisma:generate"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
