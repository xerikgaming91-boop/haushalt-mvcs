{
  "name": "haushalt-mvcs",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev": "concurrently -n SERVER,CLIENT -c auto \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && nodemon src/server.js",
    "dev:client": "npm run -w client dev",

    "start": "cd server && node src/server.js",

    "build": "npm run -w client build",
    "build:client": "npm run -w client build",

    "generate": "cd server && prisma generate",
    "db:push": "cd server && prisma db push",
    "studio": "cd server && prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.11",
    "prisma": "^6.0.0"
  }
}
